<?xml version="1.0" encoding="ISO-8859-1"?>
<component-set>
  <components>
    <component>
      <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
      <role-hint>grails-app</role-hint>
      <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
      <configuration>
        <extension>war</extension>
        <type>grails-app</type>
        <packaging>grails-app</packaging>
        <language>java</language>
        <addedToClasspath>false</addedToClasspath>
      </configuration>
    </component>

    <component>
      <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
      <role-hint>grails-plugin</role-hint>
      <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
      <configuration>
        <extension>jar</extension>
        <type>grails-plugin</type>
        <packaging>grails-plugin</packaging>
        <language>java</language>
        <addedToClasspath>false</addedToClasspath>
      </configuration>
    </component>

    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>grails-app</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <lifecycles>
          <lifecycle>
            <id>default</id>
            <phases>
                <process-sources>selera.maven:grails-wrapper-plugin:set-version</process-sources>
                <process-resources>
                    org.apache.maven.plugins:maven-resources-plugin:resources,
                    org.apache.maven.plugins:maven-resources-plugin:testResources
                </process-resources>
                <compile>selera.maven:grails-wrapper-plugin:compile</compile>
                <test>selera.maven:grails-wrapper-plugin:test-app</test>
                <!-- <package>selera.maven:grails-wrapper-plugin:war</package>  The maven-install plugin generates the WAR as well -->
                <install>selera.maven:grails-wrapper-plugin:maven-install</install>
                <deploy>selera.maven:grails-wrapper-plugin:maven-deploy</deploy>
            </phases>
          </lifecycle>
          <lifecycle>
            <id>clean</id>
            <phases>
              <clean>
                org.apache.maven.plugins:maven-clean-plugin:clean,
                selera.maven:grails-wrapper-plugin:clean
              </clean>
            </phases>
          </lifecycle>
        </lifecycles>
      </configuration>
    </component>

    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>grails-plugin</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <lifecycles>
          <lifecycle>
            <id>default</id>
            <phases>
              <process-sources>selera.maven:grails-wrapper-plugin:set-version</process-sources>
              <process-resources>
                    org.apache.maven.plugins:maven-resources-plugin:resources,
                    org.apache.maven.plugins:maven-resources-plugin:testResources
              </process-resources>
              <compile>selera.maven:grails-wrapper-plugin:compile</compile>
              <test>selera.maven:grails-wrapper-plugin:test-app</test>
              <package>selera.maven:grails-wrapper-plugin:package-plugin</package>
              <install>selera.maven:grails-wrapper-plugin:maven-install</install>
              <deploy>selera.maven:grails-wrapper-plugin:maven-deploy</deploy>
            </phases>
          </lifecycle>
          <lifecycle>
            <id>clean</id>
            <phases>
              <clean>
                org.apache.maven.plugins:maven-clean-plugin:clean,
                selera.maven:grails-wrapper-plugin:clean
              </clean>
            </phases>
          </lifecycle>
        </lifecycles>
      </configuration>
    </component>
  </components>
</component-set>
